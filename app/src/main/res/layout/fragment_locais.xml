<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="br.com.ambeco.LocaisFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/lista_locais_filtros"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/lista_locais_filtro_queimada"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_weight=".20"
                    android:layout_margin="2dp"
                    android:background="@drawable/ic_queimada_disable" />

                <ImageView
                    android:id="@+id/lista_locais_filtro_deslizamento"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_weight=".20"
                    android:layout_margin="2dp"
                    android:background="@drawable/ic_deslizamento_disable" />

                <ImageView
                    android:id="@+id/lista_locais_filtro_lixo"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_weight=".20"
                    android:layout_margin="2dp"
                    android:background="@drawable/ic_lixo_disable" />

                <ImageView
                    android:id="@+id/lista_locais_filtro_desmatamento"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_weight=".20"
                    android:layout_margin="2dp"
                    android:background="@drawable/ic_desmatamento_disable" />

            </LinearLayout>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <FrameLayout
                android:id="@+id/locais_frame"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </RelativeLayout>


    </LinearLayout>

</FrameLayout>
